#sidelogo
  position fixed
  left 45px
  top 0
  width 25%
  height 100%
  .sidelogo-main 
    display table
    position relative
    width 100%
    height 100%
    .motto-container 
      display table-cell
      width 100%
      height 100%
      min-height 100px
      box-sizing border-box
      vertical-align middle
      background-color transparent
      background-image url("https://congm.in/bing.php")
      background-repeat no-repeat
      background-position center
      background-size cover
    .motto-namespace 
      position relative
      z-index 10
      text-align center
      a
        position relative
        display inline-block
        color #fff
        font-size 4.5em
        z-index 15
        &:hover
          color: #fff;
  .motto-cover 
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    background-color rgba(61,66,96,0.4)
    background-image linear-gradient(140deg,rgba(61,66,96,0.4) 15%,rgba(31,34,49,0.6))
    z-index 2
